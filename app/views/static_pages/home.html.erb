<h1>Search for Articles</h1>

<%= form_with url: root_path, method: :get, local: true do %>
  <div class="search-bar">
    <%= text_field_tag :search, params[:search], placeholder: "Enter article title..." %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
<% end %>

<!-- Placeholder for search results table -->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Published Date</th>
      <!-- Add more columns as needed -->
    </tr>
  </thead>
  <tbody id="articles-results">
    <% @articles.each do |article| %>
      <tr>
      <td><%= article.title %></td>
      <td><%= article.author.name %></td>
      <td><%= article.publisher.name %></td>
      <td><%= article.published_date.strftime('%B %d, %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>